<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/divider1test"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/mocha_base"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/procent_score" />

    <View
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:background="@color/mocha_base"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--dasdsadasda-->

    <TextView
        android:id="@+id/score"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:maxLines="4"
        android:text="@string/score"
        android:textAlignment="center"
        android:textColor="@color/dark_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/divider1test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/procent_score"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:maxLines="4"
        android:text="@string/procent_score"
        android:textAlignment="center"
        android:textColor="@color/dark_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/score"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/score" />

    <View
        android:layout_width="0dp"
        android:layout_height="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider1test" />


</androidx.constraintlayout.widget.ConstraintLayout>